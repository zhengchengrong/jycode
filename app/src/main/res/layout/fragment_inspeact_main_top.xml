<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rll_top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!-- 遮挡状态栏透明的部分 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_margin_top"
        android:background="?attr/colorPrimary"/>
    <com.zhy.android.percent.support.PercentFrameLayout
        android:id="@+id/rfl_inspeact_first"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="7%h"
        app:layout_widthPercent="100%w">
        <ImageView
            android:id="@+id/iv_inspect_nav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:scaleType="centerInside"
            android:src="@mipmap/logo_person_center"
            app:layout_heightPercent="46%h"
            app:layout_widthPercent="6%w"
            app:layout_marginLeftPercent="6%w"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_inspect_title"
            android:textColor="#FF5B5B5B"
            android:layout_gravity="center_vertical|center_horizontal"
            app:layout_textSizePercent="50%"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:scaleType="centerInside"
            android:src="@mipmap/logo_change_btn"
            app:layout_heightPercent="46%h"
            app:layout_widthPercent="6%w"
            app:layout_marginRightPercent="6%w"
            />
    </com.zhy.android.percent.support.PercentFrameLayout>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_inspeact_main_benner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/logo_benner"
            app:layout_heightPercent="21%h"
            app:layout_widthPercent="100%w"
            android:layout_below="@+id/rfl_inspeact_first"
            />

        <com.zhy.android.percent.support.PercentFrameLayout
            android:id="@+id/pfl_second"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="20%h"
            app:layout_widthPercent="100%w"
            android:layout_below="@+id/iv_inspeact_main_benner"
            android:background="@color/background_gray"
            >
            <com.zhy.android.percent.support.PercentFrameLayout
                android:id="@+id/pfl_apply_inspect"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="100%h"
                app:layout_widthPercent="46%w"
                android:background="@color/recover_screen_text"
                >
            </com.zhy.android.percent.support.PercentFrameLayout>
            <com.zhy.android.percent.support.PercentFrameLayout
                android:id="@+id/plf_order_report"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="100%h"
                app:layout_widthPercent="54%w"
                app:layout_marginLeftPercent="46%w"
                android:background="@color/colorAccent"
                >
            </com.zhy.android.percent.support.PercentFrameLayout>
        </com.zhy.android.percent.support.PercentFrameLayout>

        <View
            android:id="@+id/view_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_heightPercent="1%h"
            app:layout_widthPercent="100%w"
            android:background="@android:color/holo_red_dark"
            android:layout_below="@+id/pfl_second"
            />
        <com.zhy.android.percent.support.PercentFrameLayout
            android:id="@+id/plf_all_server"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="24%h"
            app:layout_widthPercent="100%w"
            android:layout_below="@+id/view_three"
            android:background="@android:color/black"
            >
        </com.zhy.android.percent.support.PercentFrameLayout>
        <com.zhy.android.percent.support.PercentFrameLayout
            android:id="@+id/pfl_four"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="6%h"
            app:layout_widthPercent="100%w"
            android:layout_below="@+id/plf_all_server"
            android:background="@android:color/holo_green_dark"
            >
        </com.zhy.android.percent.support.PercentFrameLayout>

    </com.zhy.android.percent.support.PercentRelativeLayout>

</LinearLayout>

</ScrollView>
</com.zhy.android.percent.support.PercentLinearLayout>